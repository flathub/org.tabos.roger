{
    "app-id" : "org.tabos.roger",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "command" : "roger",
    "finish-args" : [
        "--socket=x11",
        "--share=ipc",
        "--socket=wayland",
        "--share=network",
        "--filesystem=host",
        "--socket=pulseaudio",
        "--talk-name=org.freedesktop.secrets",
        "--filesystem=xdg-run/keyring",
        "--talk-name=org.gnome.evolution.dataserver.AddressBook9",
        "--talk-name=org.gnome.evolution.dataserver.Calendar7",
        "--talk-name=org.gnome.evolution.dataserver.Sources5",
        "--talk-name=org.gnome.evolution.dataserver.Subprocess.Backend.*"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/info",
        "/share/gtksourceview-3.0",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules" : [
        {
            "name" : "gssdp",
            "buildsystem" : "meson",
            "cleanup" : [
                "/bin"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gssdp/1.2/gssdp-1.2.3.tar.xz",
                    "sha256" : "a263dcb6730e3b3dc4bbbff80cf3fab4cd364021981d419db6dd5a8e148aa7e8"
                }
            ]
        },
        {
            "name" : "gupnp",
            "buildsystem" : "meson",
            "cleanup" : [
                "/bin"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gupnp/1.2/gupnp-1.2.4.tar.xz",
                    "sha256" : "f7a0307ea51f5e44d1b832f493dd9045444a3a4e211ef85dfd9aa5dd6eaea7d1"
                }
            ]
        },
        {
            "name" : "ghostscript",
            "config-opts" : [
                "--disable-cups",
                "--disable-dbus",
                "--disable-gtk",
                "--without-ijs",
                "--without-luratech",
                "--without-pdftoraster",
                "--disable-compile-inits",
                "--enable-dynamic",
                "--with-system-libtiff",
                "--without-jbig2dec"
            ],
            "make-args" : [
                "so"
            ],
            "make-install-args" : [
                "soinstall"
            ],
            "cleanup" : [
                "/bin",
                "/share/man",
                "/share/ghostscript/9.53/doc/",
                "/share/ghostscript/9.53/examples"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/ArtifexSoftware/ghostpdl-downloads/releases/download/gs9533/ghostscript-9.53.3.tar.xz",
                    "sha256" : "9c9f5bc85b6c7eb08368c05b1e3339f7aaf9677ddca710c6283f872d55e2a234"
                },
                {
                    "type": "shell",
                    "commands": [
                           "rm -rf lcms2mt jpeg libpng openjpeg zlib",
                           "cp -p /usr/share/automake-*/config.{sub,guess} freetype/builds/unix/"
                    ]
                }
            ]
        },
        {
            "name" : "libical",
            "cleanup" : [
                "/lib/cmake"
            ],
            "buildsystem": "cmake",
            "config-opts" : [
                "-DCMAKE_INSTALL_LIBDIR:PATH=/app/lib",
                "-DBUILD_SHARED_LIBS:BOOL=ON"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/libical/libical/releases/download/v3.0.9/libical-3.0.9.tar.gz",
                    "sha256" : "bd26d98b7fcb2eb0cd5461747bbb02024ebe38e293ca53a7dfdcb2505265a728"
                }
            ]
        },
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name" : "evolution-data-server",
            "cleanup" : [
                "/lib/cmake",
                "/lib/evolution-data-server/*-backends",
                "/libexec",
                "/share/dbus-1/services"
            ],
            "config-opts" : [
                "-DENABLE_GTK=OFF",
                "-DENABLE_GOOGLE_AUTH=OFF",
                "-DENABLE_UOA=OFF",
                "-DENABLE_GOOGLE=OFF",
                "-DENABLE_VALA_BINDINGS=OFF",
                "-DWITH_OPENLDAP=OFF",
                "-DENABLE_INTROSPECTION=OFF",
                "-DENABLE_INSTALLED_TESTS=OFF",
                "-DENABLE_GTK_DOC=OFF",
                "-DENABLE_EXAMPLES=OFF",
                "-DENABLE_GOA=OFF",
                "-DENABLE_WEATHER=OFF",
                "-DWITH_LIBDB=OFF",
                "-DENABLE_CANBERRA=OFF"
            ],
            "buildsystem": "cmake",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/evolution-data-server/3.38/evolution-data-server-3.38.4.tar.xz",
                    "sha256" : "ac53f16b2d51f3e7ff8025f9ca19f4a2d4ce3841d72ae9fe2bb897dc8099d705"
                }
            ]
        },
        {
            "name" : "capi20",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/tabos/libcapi.git",
                    "tag" : "v3.2.3",
                    "commit" : "9e7eb7789fef8ce712aa64f290aacbbececf2dfe"
                }
            ]
        },
        {
            "name" : "spandsp",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/tabos/spandsp.git",
                    "tag" : "0.0.6pre21",
                    "commit" : "68455c2d0d56def0443ba2ae7df0e82e3a5fa5bb"
                },
                {
                    "type": "shell",
                    "commands": [
                        "cp -p /usr/share/automake-*/config.{sub,guess} config"
                    ]
                }
            ]
        },
        {
            "name" : "librm",
            "buildsystem" : "meson",
            "config-opts" : [
                "--libdir=/app/lib",
                "--buildtype=release"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/tabos/librm.git",
                    "tag" : "2.2.2",
                    "commit" : "939dc70473152a5278db68e582e64c879c0649ea"
                 }
            ]
        },
        {
            "name" : "roger",
            "config-opts" : [
                "--libdir=/app/lib",
                "--buildtype=release"
            ],
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/tabos/rogerrouter.git",
                    "tag" : "v2.4.0",
                    "commit" : "30eae915202f09c82f20b333a6f6854d8a763559"
                }
            ]
        }
    ]
